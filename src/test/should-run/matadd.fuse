import "cassert" {
  def extern assert(cond: bool);
}

decl gold: float;
decl a: float[2][2];
decl b: float[2][2];
decl c: float[2][2];

for (let i = 0..2) {
  for (let j = 0..2) {
    c[i][j] := a[i][j] + b[i][j];
  }
}
---
let sum = 0.0;
for (let i = 0..2) {
  for (let j = 0..2) {
    let v = c[i][j];
  } combine {
    sum += v;
  }
}

assert(gold == sum)
